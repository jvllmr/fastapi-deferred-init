{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":maintainLockFilesMonthly",
    "schedule:weekly",
    ":approveMajorUpdates",
    ":automergeMinor"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Do not update requires-python",
      "matchDepTypes": ["requires-python"],
      "enabled": false
    },
    {
      "description": "Don't update dependencies that dropped python 3.9 too soon...",
      "matchManagers": ["pep621"],
      "matchPackageNames": ["platformdirs", "click", "pre-commit", "cfgv"],
      "enabled": false
    }
  ]
}
