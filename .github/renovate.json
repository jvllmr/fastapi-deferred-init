{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":maintainLockFilesMonthly",
    "schedule:weekly",
    ":approveMajorUpdates",
    ":automergeMinor"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Do not update requires-python",
      "matchDepTypes": ["requires-python"],
      "enabled": false
    }
  ]
}
